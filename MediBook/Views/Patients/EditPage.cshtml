        </div>
        <div class="form__field field">
          <label class="field__label label" asp-for="ConfirmPassword"></label>
          <input class="field__text-box text-box" type="password" asp-for="ConfirmPassword" autocomplete="new-password" />
          <span asp-validation-for="ConfirmPassword"></span>
        </div>*@
        <div class="form__buttons buttons">
            <button class="buttons__button button button--positive" type="submit">Зберегти</button>
